#!/usr/bin/env spike

extern cdecl int printf() {}
extern cdecl int puts() {}

abc() {
    obj alphabet, letter, i;
    
    alphabet = "abcdefghijklmnopqrstuvwxyz";
    for (i = 0; i < alphabet.len; ++i) {
        letter = alphabet[i];
        printf("%c ", letter);
    }
    puts("");
    
    obj aBlock;
    aBlock = [ :a :b :c |
              printf("little girl voice: %c %c %c\n", a, b, c); ];
    
    aBlock('a', 'b', 'c');
    obj letters;
    letters = tuple('x', 'y', 'z');
    aBlock(...letters);
    letters = tuple('j', 'k');
    aBlock('i', ...letters);
    
    alphabet do: [ :l | printf("%c ", l); ];
    puts("");
    
    alphabet do: [ :l |
        printf("%c ", l);
        ];
    puts("");
    
    varargs("Now", "I", "know", "my", "ABCs.");
    
    alphabet do: [ :l | printf("%c ", l); if (l == 'g') return "hey"; ];
    puts("ERROR: not reached");
}

tuple(...args) {
    return args;
}

varargs(...args) {
    args do: [ :a | printf("%s\n", a); ];
}

main(argv) {
    puts(abc());
    return 0;
}
