show(v) {
    obj u;
    if (v === u) {
        puts("uninit");
    } else if (v.class === (Foo)) {
        puts("a Foo");
    } else if (v.class === (Bar)) {
        puts("a Bar");
    } else if (v.class === (XBar)) {
        puts("a XBar");
    } else if (v === (Foo)) {
        puts("class Foo");
    } else if (v === (Bar)) {
        puts("class Bar");
    } else if (v === (XBar)) {
        puts("class XBar");
    } else if (v.class === Foo.class.class) {
        puts("a metaclass");
    } else {
        printf("%s\n", v.printString);
    }
}


